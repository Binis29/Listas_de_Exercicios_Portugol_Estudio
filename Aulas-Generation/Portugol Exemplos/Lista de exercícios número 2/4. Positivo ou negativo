programa
{
	
	funcao inicio()
	{
		inteiro n;
		escreva("Digite um número inteiro qualquer: ");
		leia(n);
		

		se (n%2 ==  0 e n>0){
			escreva (n, " é par e positivo")
		}
		se ( n%2 > 0 e n>0){
			escreva (n, " é ímpar e positivo")
		}
		se ( n%2 == 0 e n<0){
			escreva (n, " é par e negativo")
		}
		se ( n%2 > 0 e n<0){
			escreva (n, " é ímpar e negativo")
		}
		
	}
}

